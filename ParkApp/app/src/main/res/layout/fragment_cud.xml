<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/labelaNazivStroja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Naziv stroja"/>

        <EditText
            android:id="@+id/nazivStroja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/labelaMjestoProizvodnje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mjesto Proizvodnje"/>

        <EditText
            android:id="@+id/mjestoProizvodnje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/labelGodinaProizvodnje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Godina Proizvodnje" />

        <Spinner
            android:id="@+id/godinaProizvodnje"
            android:layout_width="match_parent"
            android:layout_height="58dp" />


        <Button
            android:id="@+id/noviStroj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kreiraj novi stroj"/>

        <Button
            android:id="@+id/uslikaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uslikaj" />

        <Button
            android:id="@+id/promjenaStroja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promjeni stroj" />

        <Button
            android:id="@+id/obrisiStroj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obrisi stroj" />

        <Button
            android:id="@+id/nazad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nazad" />

        <ImageView
            android:id="@+id/slikaStroja"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Slika stroja"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>